# Development Environment Configuration
# Copy this file to .env.dev and update the values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# =============================================================================
# BINANCE API SETTINGS (TESTNET)
# =============================================================================
BINANCE_TESTNET=true
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET_KEY=your_testnet_secret_key_here

# =============================================================================
# TRADING SETTINGS
# =============================================================================
SYMBOLS=BTCUSDT,ETHUSDT
MAX_POSITION_SIZE=1000
MAX_DAILY_LOSS=100
MAX_DRAWDOWN_PERCENT=5
KELLY_LOOKBACK_DAYS=7
ENABLE_PAPER_TRADING=true

# =============================================================================
# KAFKA SETTINGS
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_AUTO_CREATE_TOPICS=true

# =============================================================================
# MODEL SETTINGS
# =============================================================================
# Kalman Filter
KALMAN_BATCH_SIZE=10
KALMAN_UPDATE_FREQ=500

# GARCH Model
GARCH_WINDOW=100
GARCH_UPDATE_FREQ=2000
GARCH_MIN_OBS=20

# Risk Manager (BOCD)
BOCD_HAZARD_RATE=0.01
WARNING_THRESHOLD=0.2
HALT_THRESHOLD=0.4
CRITICAL_THRESHOLD=0.6
MIN_HALT_DURATION=1
MAX_HALT_DURATION=1
RECOVERY_THRESHOLD=0.1

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_RETENTION=24h

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=sqlite:///data/trading_dev.db

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================
ENABLE_DEBUG_LOGGING=true
ENABLE_MODEL_DIAGNOSTICS=true
ENABLE_BOCD_DIAGNOSTICS=true
KAFKA_DEBUG=true

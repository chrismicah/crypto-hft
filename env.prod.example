# Production Environment Configuration
# Copy this file to .env.prod and update the values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# BINANCE API SETTINGS (LIVE TRADING - BE CAREFUL!)
# =============================================================================
BINANCE_TESTNET=false
BINANCE_API_KEY=your_live_api_key_here
BINANCE_SECRET_KEY=your_live_secret_key_here

# =============================================================================
# TRADING SETTINGS
# =============================================================================
SYMBOLS=BTCUSDT,ETHUSDT,ADAUSDT,BNBUSDT,SOLUSDT
MAX_POSITION_SIZE=50000
MAX_DAILY_LOSS=10000
MAX_DRAWDOWN_PERCENT=15
KELLY_LOOKBACK_DAYS=60
ENABLE_PAPER_TRADING=false
ORDER_TIMEOUT=30
MAX_SLIPPAGE_BPS=10
POSITION_SIZE_MULT=1.0

# =============================================================================
# KAFKA SETTINGS
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_AUTO_CREATE_TOPICS=false

# =============================================================================
# MODEL SETTINGS
# =============================================================================
# Kalman Filter
KALMAN_BATCH_SIZE=100
KALMAN_UPDATE_FREQ=1000

# GARCH Model
GARCH_WINDOW=500
GARCH_UPDATE_FREQ=5000
GARCH_MIN_OBS=100
VOL_FORECAST_HORIZON=1

# Risk Manager (BOCD)
BOCD_HAZARD_RATE=0.002
WARNING_THRESHOLD=0.3
HALT_THRESHOLD=0.5
CRITICAL_THRESHOLD=0.8
MIN_HALT_DURATION=10
MAX_HALT_DURATION=4
RECOVERY_THRESHOLD=0.1

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
GRAFANA_ADMIN_PASSWORD=your_secure_password_here
GRAFANA_SECRET_KEY=your_secret_key_here
GRAFANA_ROOT_URL=https://your-domain.com/grafana
PROMETHEUS_RETENTION=720h

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=sqlite:///data/trading_prod.db

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# SSL/TLS settings for production
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/
SSL_KEY_PATH=/etc/ssl/private/

# =============================================================================
# ALERTING SETTINGS
# =============================================================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email settings for alerts
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=alerts@your-domain.com
SMTP_PASSWORD=your_smtp_password
ALERT_EMAIL=trading-team@your-domain.com

# =============================================================================
# PRODUCTION FLAGS
# =============================================================================
ENABLE_DEBUG_LOGGING=false
ENABLE_MODEL_DIAGNOSTICS=false
ENABLE_BOCD_DIAGNOSTICS=false
KAFKA_DEBUG=false

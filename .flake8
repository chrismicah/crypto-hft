[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .tox

per-file-ignores =
    # Ignore import errors in __init__.py files
    __init__.py:F401
    # Allow longer lines in configuration files
    */config.py:E501
    # Allow unused imports in test files
    test_*.py:F401,F811
    
# Error codes to always report
select = E,W,F,C,N

# Count errors
count = True
statistics = True
